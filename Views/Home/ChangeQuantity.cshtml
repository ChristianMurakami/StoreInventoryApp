@model StoreInventoryApplication.DataModels.ProdId_N_Count

@{
    ViewData["Title"] = "ChangeQuantity";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrderPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" hidden class="control-label"></label>
                <input asp-for="Id" hidden class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" readonly class="control-label"></label>
                <input asp-for="ProductId" readonly class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdName" readonly class="control-label"></label>
                <input asp-for="ProdName" readonly class="form-control" />
                <span asp-validation-for="ProdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdCount" class="control-label"></label>
                <input asp-for="ProdCount" class="form-control" />
                <span asp-validation-for="ProdCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationKey" hidden class="control-label"></label>
                <input asp-for="LocationKey" hidden class="form-control" />
                <span asp-validation-for="LocationKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationType" hidden class="control-label"></label>
                <input asp-for="LocationType" hidden class="form-control" />
                <span asp-validation-for="LocationType" hidden class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EditOrder" asp-route-id="@Model.LocationKey">Back to Order</a>
</div>

